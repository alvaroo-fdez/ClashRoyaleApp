<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.izv.card">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.clashroyale">
        <activity
            android:name="org.izv.clashroyale.view.activity.EditCard"
            android:exported="false" />
        <activity
            android:name="org.izv.clashroyale.view.activity.CreateCardActivity"
            android:exported="false"
            android:parentActivityName="org.izv.clashroyale.view.activity.CardActivity"
            />
        <activity
            android:name="org.izv.clashroyale.view.activity.CardActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>